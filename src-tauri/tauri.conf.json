{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StreamTTS",
  "version": "2.0.0",
  "identifier": "com.nerve.streamtts",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "StreamTTS",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#1a1a1a",
        "titleBarStyle": "Visible",
        "hiddenTitle": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "singleInstance": {
      "enabled": true
    }
  }
}
